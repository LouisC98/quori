{% extends 'base.html.twig' %}

{% block title %}
    {% if user.id == app.user.id %}
        Mes réponses
    {% else %}
        Réponses de {{user.name}}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container comments-show">
    <div class="text-center my-3 profile">
        {% if user.id == app.user.id %}
        <h2 class="text-center">Mes réponses</h2>
        {% else %}
        <a href="{{path('app_user_questions', {id: user.id})}}">Questions de {{user.name}}</a>
        <a href="{{path('app_user_comments', {id: user.id})}}">Réponses de {{user.name}}</a>
        {% endif %}
    </div>
    <div class="row row-cols-1 g-3">
        {% if comments %}
        {% for comment in comments %}
        <div class="col">
            {% include "_partials/_comment_card.html.twig" %}
        </div>
        {% endfor %}
        {% else %}
        <h3 class="text-center my-5">Aucune réponse ...</h3>
        {% endif %}
    </div>

</div>
{% endblock %}
